#:kivy 1.11.1

<EyeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb:(0,0,0)
            Rectangle:
                pos: self.pos
                size: self.size
        EyeImage:
            id: lefteye
            pos: (root.size[0]/8,root.size[1]/4.8)
            size:(root.size[0]/3.2,root.size[1]/1.71)
        EyeImage:
            id: righteye
            pos: (root.size[0]/1.78,root.size[1]/4.8)
            size:(root.size[0]/3.2,root.size[1]/1.71)
        Button:
            id: menubutton
            text: 'Go to Menu'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'menus'
            size_hint: (.1,.1)
            pos_hint:{"right":1,"top":1}
        Button:
            id: votingbutton
            text: 'Go to vote screen'
            on_press:
                root.manager.transition.direction = 'up'
                root.manager.current = 'voting'
            size_hint: (.1,.1)
            pos_hint:{"left":1,"top":1}
            
        Button:
            id: upbutton
            text: 'Up'
            on_press: root.move_look(0,0.2)
            size_hint: (.1,.1)
            pos_hint:{"top":1,"right":0.5}
        Button:
            id: rightbutton
            text: 'Right'
            on_press: root.move_look(0.2,0)
            size_hint: (.1,.1)
            pos_hint:{"top":0.5,"right":1}
        Button:
            id: downbutton
            text: 'Down'
            on_press: root.move_look(0,-0.2)
            size_hint: (.1,.1)
            pos_hint:{"right":0.5}
        Button:
            id: leftbutton
            text: 'Left'
            on_press: root.move_look(-0.2,0)
            size_hint: (.1,.1)
            pos_hint:{"top":0.5,"right":0.1}

    BoxLayout:
        size_hint_x: 0.1
        size_hint_y: 0.4
	    Slider:
	    	id:slider
	    	backgroundwidth: 10
	    	min:0
	    	max:1
	    	step:0.01
	    	orientation: 'vertical'
	    	on_value: root.mood = slider.value

