#:kivy 1.11.1

<EyeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb:(0,0,0)
            Rectangle:
                pos: self.pos
                size: self.size
        EyeImage:
            id: lefteye
            pos: (100,100)
        EyeImage:
            id: righteye
            pos: (300,100)
        Button:
            id: menubutton
            text: 'Go to Menu'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'menus'
            size_hint: (.1,.1)
            pos_hint:{"right":1,"top":1}
        TextInput:
            id: moodinput
            input_filter: 'float'
            text: '01.0'
            on_text: root.update_mood()
            size_hint: (0.1,0.1)

<MenuScreen>:
    BoxLayout:
        Button:
            id: eyebutton
            text: 'Back to Eyes'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'eyes'
        Button:
            id: randombutton
            text: 'Some Option'


<EyeImage>:
    canvas:
        Color:
            rgb:(1,1,1)
        Ellipse:
            pos: self.pos
            size: (200,275)
    PupilImage:
        id: pupil
        pos: (root.x +50,root.y)

<PupilImage>:
    canvas:
        Color:
            rgb: (1,0,0)
        Ellipse:
            pos: self.pos
            size: (100,100)

            
