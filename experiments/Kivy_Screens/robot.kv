#:kivy 1.11.1

<EyeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb:(0,0,0)
            Rectangle:
                pos: self.pos
                size: self.size
        EyeImage:
            id: lefteye
            pos: (100,125)
            size: (250,350)
        EyeImage:
            id: righteye
            pos: (450,125)
            size: (250,350)
        Button:
            id: menubutton
            text: 'Go to Menu'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'menus'
            size_hint: (.1,.1)
            pos_hint:{"right":1,"top":1}
            
        Button:
            id: upbutton
            text: 'Up'
            on_press: root.move_look(0,10)
            size_hint: (.1,.1)
            pos_hint:{"top":1,"right":0.5}
        Button:
            id: rightbutton
            text: 'Right'
            on_press: root.move_look(10,0)
            size_hint: (.1,.1)
            pos_hint:{"top":0.5,"right":1}
        Button:
            id: downbutton
            text: 'Down'
            on_press: root.move_look(0,-10)
            size_hint: (.1,.1)
            pos_hint:{"right":0.5}
        Button:
            id: leftbutton
            text: 'Left'
            on_press: root.move_look(-10,0)
            size_hint: (.1,.1)
            pos_hint:{"top":0.5,}
            
        TextInput:
            id: moodinput
            input_filter: 'float'
            text: '01.0'
            on_text: root.update_mood()
            size_hint: (0.1,0.1)

<MenuScreen>:
    BoxLayout:
        Button:
            id: eyebutton
            text: 'Back to Eyes'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'eyes'
        Button:
            id: randombutton
            text: 'Some Option'

<EyeImage>:
    canvas:
        Color:
            rgb:(1,1,1)
        Ellipse:
            pos: self.pos
            size: (250,350)
    PupilImage:
        id: pupil
        pos: (root.x + 75, root.y)

<PupilImage>:
    canvas:
        Color:
            rgb: (1,0,0)
        Ellipse:
            size: (100,100)
            pos: self.pos
