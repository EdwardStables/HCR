#:kivy 1.11.1

<EyeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb:(0,0,0)
            Rectangle:
                pos: self.pos
                size: self.size
        EyeImage:
            id: lefteye
            pos: (root.size[0]/8,root.size[1]/4.8)
            size:(root.size[0]/3.2,root.size[1]/1.71)
        EyeImage:
            id: righteye
            pos: (root.size[0]/1.78,root.size[1]/4.8)
            size:(root.size[0]/3.2,root.size[1]/1.71)
        Button:
            id: menubutton
            text: 'Go to Menu'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'menus'
            size_hint: (.1,.1)
            pos_hint:{"right":1,"top":1}
        Button:
            id: votingbutton
            text: 'Go to vote screen'
            on_press:
                root.manager.transition.direction = 'up'
                root.manager.current = 'voting'
            size_hint: (.1,.1)
            pos_hint:{"left":1,"top":1}

<MenuScreen>:
    BoxLayout:
        Button:
            id: eyebutton
            text: 'Back to Eyes'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'eyes'
        Button:
            id: randombutton
            text: 'Some Option'

<VotingScreen>:
    BoxLayout:
        size_hint_y: 0.2
        pos_hint:{'top':1}
        Label:
            text: "How was your experience today?"
            pos_hint: {'top':1}
    BoxLayout:
        size_hint_y: 0.8
        pos_hint: {'bottom':1}
        Button:
            id: button1
            text: '1'
            on_press:
                root.pass_reaction(1)
                root.manager.transition.direction='down'
                root.manager.current = 'eyes'
        Button:
            id: button2
            text: '2'
            on_press:
                root.pass_reaction(2)
                root.manager.transition.direction='down'
                root.manager.current = 'eyes'
        Button:
            id: button3
            text: '3'
            on_press:
                root.pass_reaction(3)
                root.manager.transition.direction='down'
                root.manager.current = 'eyes'
        Button:
            id: button4
            text: '4'
            on_press:
                root.pass_reaction(4)
                root.manager.transition.direction='down'
                root.manager.current = 'eyes'
        Button:
            id: button5
            text: '5'
            on_press:
                root.pass_reaction(5)
                root.manager.transition.direction='down'
                root.manager.current = 'eyes'

<EyeImage>:
    size_hint: (None,None)
    size: (250,350)
    canvas:
        Color:
            rgb:(1,1,1)
        Ellipse:
            size: self.size
            pos: self.pos
    PupilImage:
        id: pupil
        pos: (root.x + root.size[0]/2 -self.size[0]/2, root.y)
    EyelidImage:
        id: lid
        pos: (root.x,root.y+root.size[1])
        size:(root.size[0],0)

<PupilImage>:
    size: (self.parent.size[0]/2.5,self.parent.size[0]/2.5)
    canvas:
        Color:
            rgb: (0,0,0)
        Ellipse:
            size: self.size
            pos: self.pos

<EyelidImage>:
    canvas:
        Color:
            rgb: (0,0,0)
        Rectangle:
            size: self.size
            pos: self.pos
        
